{% extends '@SidusUser/Email/base.html.twig' %}

{# @var user \Sidus\UserBundle\Entity\User #}
{% block content %}
    {% set resetPath = url('sidus.user.reset_password', {token: user.authenticationToken}) %}
    <p>Greetings {{ user }},</p>
    <p>
        This is a automatic email from <i>{{ company }}</i>:<br>
        <a href="{{ url(homepage_route) }}">{{ url(homepage_route) }}</a>
    </p>
    <p>You have requested a password change, please click on the following link to create a new password:</p>
    <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
        <tbody>
        <tr>
            <td align="left">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                    <tr>
                        <td>
                            <a href="{{ resetPath }}" target="_blank">
                                Reset password
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
    <p>
        If you did not request a password change or if you are experiencing any issue, please contact the support:
        <a href="mailto:{{ support.address }}">{{ support.address }}</a>
    </p>
{% endblock %}
